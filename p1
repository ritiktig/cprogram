
 #include<stdio.h>
int area_perim(int l,int b,int*perim){
   *perim=2*(l+b); 
return l*b;

 }
 int main(){
     int l,b,p;
    printf("enter the length and breadt of the rectangle\n");
    scanf("%d %d",&l,&b);
    int a=area_perim(l,b,&p);
    printf("the perimeter of the rectangle is %d\n",p);
    printf("the area of rectangle is %d",a);
 }
